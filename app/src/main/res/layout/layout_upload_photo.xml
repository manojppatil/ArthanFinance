<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_upload_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="Upload your photo"
                android:textColor="@color/black"
                android:textSize="22sp" />
            <!--            <ImageView-->
            <!--                android:id="@+id/photoImgView"-->
            <!--                android:layout_width="200dp"-->
            <!--                android:layout_height="200dp"-->
            <!--                android:layout_gravity="center_horizontal"-->
            <!--                android:layout_marginVertical="30dp"-->
            <!--                android:src="@drawable/sample_profile" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_24"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_uploadPhoto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_language_rect"
                    android:drawableLeft="@drawable/ic_folder"
                    android:drawablePadding="-40dp"
                    android:paddingVertical="9dp"
                    android:paddingStart="25dp"
                    android:text="@string/upload"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_orange2"
                    android:textSize="@dimen/text_18" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_camera_uploadPhoto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_language_rect"
                    android:drawableLeft="@drawable/ic_camera_small_icon"
                    android:drawablePadding="-40dp"
                    android:paddingVertical="9dp"
                    android:paddingStart="25dp"
                    android:text="@string/camera"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_orange2"
                    android:textSize="@dimen/text_18" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_next_in_uploadPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@drawable/bg_register_rect_orange"
                android:paddingVertical="10dp"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
