<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RewardsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_theme_color"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/reward_big"
                    android:src="@drawable/reward_big"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvRewardPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="432"
                    android:textColor="@color/white"
                    android:textSize="70sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/mukta_vaani"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.17"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tvRewardsEarned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reward points earned"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/mukta_vaani"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintTop_toBottomOf="@id/tvRewardPoint"
                    tools:layout_editor_absoluteY="201dp" />

                <Button
                    android:id="@+id/btn_redeem"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45sp"
                    android:background="@drawable/bg_register_rect_orange"
                    android:elevation="8dp"
                    android:text="Redeem Now"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/mukta_vaani"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvRewardsEarned"
                    tools:layout_editor_absoluteY="275dp" />

                <TextView
                    android:id="@+id/tvEarnPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="22dp"
                    android:text="How to earn more points"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_redeem" />

                <LinearLayout
                    android:id="@+id/lyt_home_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/tvEarnPoints">

                    <LinearLayout
                        android:id="@+id/lyt_refer_friends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="35sp"
                            android:layout_gravity="center"
                            android:src="@drawable/home_dwld_stmt" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Refer Friends"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:paddingEnd="3dp"
                                android:text="Share app with your friends &amp; family to earn points"
                                android:textColor="@android:color/black"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="15sp"
                            android:src="@drawable/ic_right_arrow" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginTop="10sp"
                        android:background="@color/ford_grey" />

                    <LinearLayout
                        android:id="@+id/lyt_give_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center"
                            android:src="@drawable/feedback" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Give Feedback"

                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:paddingEnd="3dp"
                                android:text="You can earn reward points by giving feedback about customers"

                                android:textColor="@android:color/black"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="15sp"
                            android:src="@drawable/ic_right_arrow" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginTop="10sp"
                        android:background="@color/ford_grey" />

                    <LinearLayout
                        android:id="@+id/lyt_genarate_stmt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="35sp"
                            android:layout_gravity="center"
                            android:src="@drawable/home_dwld_stmt" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Purchase New Product"

                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_generate_stmt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:paddingEnd="3dp"
                                android:text="You will earn reward points every time you purchase any product"

                                android:textColor="@android:color/black"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="15sp"
                            android:src="@drawable/ic_right_arrow" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_showMore_rewards"
                        android:layout_width="125sp"
                        android:layout_height="35sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/bg_language_rect"
                        android:elevation="8dp"
                        android:text="Show More"
                        android:textAllCaps="false"
                        android:textColor="@color/dark_orange2"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/mukta_vaani" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvPointshistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Reward points earned history"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_redeem" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>