<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeTabs.HomeDashboardActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_theme_color"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="300dp"
                    android:contentDescription="@string/demo_user_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_bottom_corner"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:id="@+id/arthanHeader"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginRight="25dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="20sp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/ic_home"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Dashboard"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageButton
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="25dp"
                            android:layout_marginRight="25dp"
                            android:background="@drawable/ic_facebook"
                            android:visibility="invisible" />

                        <ImageButton
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="25dp"
                            android:layout_marginRight="25dp"
                            android:background="@drawable/ic_notification" />

                        <ImageButton
                            android:id="@+id/iv_logout"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/ic_logout" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/userHeaderLayout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/arthanHeader">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="25dp"
                        android:layout_marginRight="25dp"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/circle_img"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/bg_image_circle"
                            android:src="@drawable/ic_accounts" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="start|center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:text="Welcome"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/customerName"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:text=""
                                android:textColor="@android:color/white"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/customerLastLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:background="@drawable/bg_text_view"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="Last Login: 14 Oct 2020 12:24:06"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/refresh_home"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_refresh_24"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_carousel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/userHeaderLayout">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/homecardView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="10sp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_bg">

                            <ImageView
                                android:id="@+id/cardlogo"
                                android:layout_width="100sp"
                                android:layout_height="50sp"
                                android:layout_marginStart="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/arthik_white" />

                            <ImageView
                                android:id="@+id/chip"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="20dp"
                                android:gravity="end"
                                android:src="@drawable/contactlesss"
                                app:tint="@color/white" />

                            <LinearLayout
                                android:id="@+id/borrowAmtLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="60dp"
                                android:layout_marginEnd="10dp"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <LinearLayout
                                    android:id="@+id/homeLayout1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:padding="5dp">

                                    <TextView
                                        android:id="@+id/homeStatus1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="AVAILABLE LIMIT"
                                        android:textColor="@color/white"
                                        android:textSize="12sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="10dp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:visibility="visible">

                                        <ImageView
                                            android:layout_width="20sp"
                                            android:layout_height="20sp"
                                            android:gravity="center_vertical"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/rupee"
                                            app:tint="@color/white" />

                                        <TextView
                                            android:id="@+id/availableAmt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:maxLength="10"
                                            android:padding="5dp"
                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:padding="5dp">

                                    <TextView
                                        android:id="@+id/txt_borrow_amt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="BORROWED AMOUNT"
                                        android:textColor="@color/white"
                                        android:textSize="12sp" />

                                    <LinearLayout
                                        android:id="@+id/textstatusLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="10dp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:visibility="visible">

                                        <ImageView
                                            android:id="@+id/homeRupee"
                                            android:layout_width="20sp"
                                            android:layout_height="20sp"
                                            android:gravity="center_vertical"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/rupee"
                                            app:tint="@color/white" />

                                        <TextView
                                            android:id="@+id/borrowedAmt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/availAmtLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="120dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <LinearLayout
                                    android:id="@+id/userLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:padding="5dp">

                                    <TextView
                                        android:id="@+id/tv_custid"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="CRN"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:textStyle="normal"
                                        android:visibility="visible" />

                                    <TextView
                                        android:id="@+id/card_number"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="1285 5555 6966"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="normal"
                                        app:fontFamily="@font/credc" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/valid_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:orientation="vertical"
                                    android:padding="5dp">

                                    <TextView
                                        android:id="@+id/tv_valid"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="VALID THRU"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:id="@+id/valid_thru"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="06/24"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/chip_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="180dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/user_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <com.ebanx.swipebtn.SwipeButton
                    android:id="@+id/swipe_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:visibility="visible"
                    app:button_background="@drawable/shape_button"
                    app:button_bottom_padding="20dp"
                    app:button_image_disabled="@drawable/ic_arrow_forward"
                    app:button_image_enabled="@drawable/ic_check"
                    app:button_left_padding="20dp"
                    app:button_right_padding="20dp"
                    app:button_top_padding="20dp"
                    app:inner_text="Swipe to Withdraw"
                    app:inner_text_background="@drawable/shape_background"
                    app:inner_text_bottom_padding="16dp"
                    app:inner_text_color="#000000"
                    app:inner_text_size="17sp"
                    app:inner_text_top_padding="16dp"
                    app:layout_constraintTop_toBottomOf="@id/main_carousel" />

                <View
                    android:id="@+id/vw_homes"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginTop="4dp"
                    android:background="@color/dark_grey"
                    app:layout_constraintTop_toBottomOf="@id/swipe_btn" />

                <LinearLayout
                    android:id="@+id/lyt_account_setup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"
                    android:background="@drawable/bg_white_rect"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/swipe_btn">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Let's finish your Account Setup"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/lyt_step_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <CheckBox
                            android:id="@+id/kyc_checked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:button="@drawable/ic_baseline_check_circle_24"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:visibility="gone"
                            app:buttonTint="@color/colorGreen1" />

                        <CheckBox
                            android:id="@+id/kyc_unchecked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:button="@drawable/ic_baseline_check_circle_outline_24"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            app:buttonTint="@color/colorGreen1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Complete Business Details"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Business details mandatory to verify your business. Tap to complete your Business KYC now!"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_complete_kyc"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/next" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyt_step_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_smoke"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <CheckBox
                            android:id="@+id/nach_checked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:button="@drawable/ic_baseline_check_circle_24"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:visibility="gone"
                            app:buttonTint="@color/colorGreen1" />

                        <CheckBox
                            android:id="@+id/nach_unchecked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:button="@drawable/ic_baseline_check_circle_outline_24"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            app:buttonTint="@color/colorGreen1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="E-NACH Mandate"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Register for E-NACH Mandate to feel the easy banking. Your maney safe with RBI-licenced NBFC."
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_nach_mandate"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/next" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyt_step_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_smoke"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <CheckBox
                            android:id="@+id/agreement_checked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:button="@drawable/ic_baseline_check_circle_24"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:visibility="gone"
                            app:buttonTint="@color/colorGreen1" />

                        <CheckBox
                            android:id="@+id/agreement_unchecked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:button="@drawable/ic_baseline_check_circle_outline_24"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            app:buttonTint="@color/colorGreen1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Loan Documentation"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Complete your Loan documentation and Digital agreement, to seamlessly withdraw funds"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_agreement"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/next" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyt_step_four"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_smoke"
                        android:clickable="false"
                        android:enabled="false"
                        android:focusable="false"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <CheckBox
                            android:id="@+id/withdraw_checked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:button="@drawable/ic_baseline_check_circle_24"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:visibility="gone"
                            app:buttonTint="@color/colorGreen1" />

                        <CheckBox
                            android:id="@+id/withdraw_unchecked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:button="@drawable/ic_baseline_check_circle_outline_24"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            app:buttonTint="@color/colorGreen1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Withdraw Your Funds"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Withdraw your Funds with No processing fees and minimun interest rate"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_withdraw_funds"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/next" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/vw_home"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginTop="4dp"
                    android:background="@color/dark_grey"
                    app:layout_constraintTop_toBottomOf="@id/lyt_account_setup" />


                <LinearLayout
                    android:id="@+id/lyt_home_services"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/vw_home">

                    <LinearLayout
                        android:id="@+id/lyt_genarate_stmt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_rect"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5sp">

                        <ImageView
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10sp"
                            android:src="@drawable/home_dwld_stmt" />

                        <TextView
                            android:id="@+id/txt_generate_stmt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:text="Download Statement"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyt_service_request"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_rect"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10sp">

                        <ImageView
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10sp"
                            android:src="@drawable/home_service_request" />

                        <TextView
                            android:id="@+id/txt_service_request"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:text="Service Request"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyt_customer_service"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_rect"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10sp">

                        <ImageView
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10sp"
                            android:src="@drawable/home_customer_service" />

                        <TextView
                            android:id="@+id/txt_customer_service"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:text="Customer Service"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/lyt_home_services">

                    <TextView
                        android:id="@+id/newsHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Billing Information"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/carouselView"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="10dp">

                        <com.synnapps.carouselview.CarouselView
                            android:id="@+id/carouselView"
                            android:layout_width="match_parent"
                            android:layout_height="200sp"
                            android:scaleType="centerCrop"
                            app:autoPlay="false"
                            app:fillColor="#FFFFFF"
                            app:layout_constraintTop_toBottomOf="@id/newsHeader"
                            app:pageColor="#000000"
                            app:radius="0dp"
                            app:slideInterval="3000"
                            app:strokeColor="#FF777777"
                            app:strokeWidth="1dp" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
