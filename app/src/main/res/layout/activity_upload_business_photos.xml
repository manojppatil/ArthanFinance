<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".applyLoan.UploadBusinessPhotos">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_business_owner"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/mukta_vaani"
                android:text="Upload Shop/Business Owner Photo"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_business_0wner"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_white_smoke_rect"
                android:gravity="center">

                <ImageView
                    android:id="@+id/businessOwnerImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_user" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_24"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_upload_owner_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_language_rect"
                    android:drawableStart="@drawable/ic_folder"
                    android:drawablePadding="-40dp"
                    android:fontFamily="@font/mukta_vaani"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:text="@string/upload"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_orange2"
                    android:textSize="@dimen/text_18" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_camera_owner_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_language_rect"
                    android:drawableLeft="@drawable/ic_camera_icon_yellow"
                    android:drawablePadding="-40dp"
                    android:fontFamily="@font/mukta_vaani"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:text="@string/camera"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_orange2"
                    android:textSize="@dimen/text_18" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_business"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/mukta_vaani"
                android:text="Upload Front Of The Shop/Business Photo"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_pan"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_white_smoke_rect"
                android:gravity="center">

                <ImageView
                    android:id="@+id/businessImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_business_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_24"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_upload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_language_rect"
                    android:drawableStart="@drawable/ic_folder"
                    android:drawablePadding="-40dp"
                    android:fontFamily="@font/mukta_vaani"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:text="@string/upload"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_orange2"
                    android:textSize="@dimen/text_18" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_camera"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_language_rect"
                    android:drawableLeft="@drawable/ic_camera_icon_yellow"
                    android:drawablePadding="-40dp"
                    android:fontFamily="@font/mukta_vaani"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:text="@string/camera"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_orange2"
                    android:textSize="@dimen/text_18" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_business_stock"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/mukta_vaani"
                android:text="Upload Shop/Business Stock Photo"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_business_stock"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_white_smoke_rect"
                android:gravity="center">

                <ImageView
                    android:id="@+id/businessStockImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_store_mall_directory_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_24"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_upload_stock_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_language_rect"
                    android:drawableStart="@drawable/ic_folder"
                    android:drawablePadding="-40dp"
                    android:fontFamily="@font/mukta_vaani"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:text="@string/upload"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_orange2"
                    android:textSize="@dimen/text_18" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_camera_stock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_language_rect"
                    android:drawableLeft="@drawable/ic_camera_icon_yellow"
                    android:drawablePadding="-40dp"
                    android:fontFamily="@font/mukta_vaani"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:text="@string/camera"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_orange2"
                    android:textSize="@dimen/text_18" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_business_shop_locality"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/mukta_vaani"
                android:text="Upload Shop/Business Locality Photo"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_business_shop_locality"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_white_smoke_rect"
                android:gravity="center">

                <ImageView
                    android:id="@+id/businessLocalityImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_location_city_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_24"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_upload_shop_locality"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_language_rect"
                    android:drawableStart="@drawable/ic_folder"
                    android:drawablePadding="-40dp"
                    android:fontFamily="@font/mukta_vaani"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:text="@string/upload"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_orange2"
                    android:textSize="@dimen/text_18" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_camera_shop_locality"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_language_rect"
                    android:drawableLeft="@drawable/ic_camera_icon_yellow"
                    android:drawablePadding="-40dp"
                    android:fontFamily="@font/mukta_vaani"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:text="@string/camera"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_orange2"
                    android:textSize="@dimen/text_18" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_24"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/dimen_24"
                android:layout_marginBottom="@dimen/dimen_24"
                android:background="@drawable/bg_register_rect_orange"
                android:fontFamily="@font/mukta_vaani"
                android:paddingVertical="10dp"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indigo"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="38dp"
            android:src="@drawable/ic_back_orange" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/img_back"
            android:text="Apply for Loan"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvLoanApplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginStart="13dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="@dimen/dimen_10"
            android:text="Upload Business Photos"
            android:textColor="@color/dark_orange2"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>