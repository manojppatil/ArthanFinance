                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_edit_profile" />-->

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_mpin"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="41dp"
                android:layout_marginTop="8dp"
                android:text="@string/enter_pin"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_mpin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tv_mpin"
                android:layout_marginHorizontal="41dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="28dp"
                android:background="@drawable/bg_light_indigo_solid"
                android:ems="10"
                android:hint="Enter MPIN"
                android:imeOptions="actionDone"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:paddingLeft="@dimen/dimen_20"
                android:textColor="@color/white" />

