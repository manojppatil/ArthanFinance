<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CC4A4A4A"
    android:orientation="vertical">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dimen_20"
        android:background="@drawable/link_account_otp_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_20"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/close_popup"
            android:src="@drawable/ic_baseline_close_24" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/link_otp_verify_image"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_range"
            android:text="@string/oh_no"
            android:textSize="@dimen/font_30"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/areyousure_want_reject_consent"
            android:textSize="@dimen/font_18"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_15"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/its_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_weight="1"
                android:background="@drawable/reject_bt_border"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="@string/its_ok"
                android:textAllCaps="false"
                android:textColor="@color/app_range"
                android:textSize="@dimen/font_18"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/go_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_weight="1"
                android:background="@drawable/login_button"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="@string/go_back"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>