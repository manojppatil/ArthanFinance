<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".activity.OnemoneyLoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_60">

        <LinearLayout
            android:background="@color/app_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:layout_gravity="left"
            android:padding="@dimen/dimen_7"
            android:layout_margin="@dimen/dimen_10"
            android:gravity="left"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:scaleType="fitStart"
                android:id="@+id/fiu_logo"
                app:srcCompat="@drawable/awesome_bank" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_20"
                app:tint="@color/white"
                app:srcCompat="@drawable/info_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dimen_0"
            android:padding="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/dimen_5"
                android:text="@string/consent_approved"
                android:textColor="@color/black"
                android:textSize="@dimen/font_20" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_10"
                android:background="@drawable/progress_border">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_10"
                    android:background="@drawable/gradiant_border"
                    android:orientation="horizontal" />
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:padding="@dimen/dimen_20"
                android:layout_margin="@dimen/dimen_10"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:id="@+id/consent_approved_logo"
                app:srcCompat="@drawable/ic_update_consent"
                tools:ignore="VectorDrawableCompat" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:padding="@dimen/dimen_5"
                android:text="@string/your_consent_is_approved"
                android:textColor="@color/black"
                android:textSize="@dimen/font_18" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10"
                android:background="@drawable/ic_light_green_border"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/font_14"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/to_pause_revoke_use"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/android_layout"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/dimen_10"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_android_bg"
                            app:srcCompat="@drawable/ic_android_icon"
                            android:padding="@dimen/dimen_15"
                            tools:ignore="VectorDrawableCompat" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_12"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/onemoney_android_app"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/web_layout"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:background="@drawable/ic_web_bg"
                            app:srcCompat="@drawable/ic_browser_web"
                            android:padding="@dimen/dimen_15"
                            android:layout_gravity="center"
                            tools:ignore="VectorDrawableCompat" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_12"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/onemoney_web_app"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:padding="@dimen/dimen_5"
                android:id="@+id/redirect_in_seconds"
                android:text="@string/we_are_redirect_back"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14" />


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_buffer_load"
                android:layout_gravity="center"
                android:id="@+id/loading_image"
                android:layout_marginTop="@dimen/dimen_10"/>


        </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/powerby_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/power_by"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_30"
            app:srcCompat="@drawable/one_money_logo" />
    </LinearLayout>


</RelativeLayout>