        <!--            android:layout_height="@dimen/dimen_15"-->
        <!--            android:layout_centerVertical="true"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            app:srcCompat="@drawable/ic_close_white" />-->

    </RelativeLayout>

</RelativeLayout>